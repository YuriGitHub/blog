<%= form_for @current_user, url: registration_edit_user_path, method: :patch  do |f| %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br/>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br/>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <br/>

    <%= f.label :age %>
    <%= f.text_field :age %>
    <br/>

        <%= f.label :country %>
        <%= f.select :country, [@current_user.country,'Ukraine','USA','Russia']%>

    <br/>


    <%= f.label :city %>
    <%= f.text_field :city %>
    <br/>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br/>

    <%= f.label :gender %><br>
    <%= f.radio_button :gender, '1' %> Male
    <%= f.radio_button :gender, '0' %> Female

    <br/>

    <%= f.submit %>




<% end %>
